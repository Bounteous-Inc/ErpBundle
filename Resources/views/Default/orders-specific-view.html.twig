{% extends 'OroUIBundle:actions:view.html.twig' %}
{% import 'OroDataGridBundle::macros.html.twig' as dataGrid %}

{% set pageTitle = 'demacmedia_erp.orders.entity.label'|trans %}
{% set params = { 'originalOrderId': originalOrderId } %}

{% block stats %}
    {% include 'OroWorkflowBundle:Widget:steps.html.twig' with { 'entity': entityAccounts } %}
{% endblock %}

{% block pageHeader %}
    {% include 'DemacMediaErpBundle:Default:headerStats.html.twig' with { 'entity': entityAccounts } %}
{% endblock %}

{% block content_data %}
<div id="contactView" class="navbar navbar-static scrollspy-nav">
    <div class="navbar-inner">
        <div class="container-fluid" style="width: auto;">
            <ul class="nav">
                <li class="active"><a href="#">General Information</a></li>
                <li class=""><a href="#physical-store-orders">Web Store Orders</a></li>
            </ul>
        </div>
    </div>
</div>

<div class="form-horizontal">
    <div class="responsive-cell">
        <div class="row-fluid form-horizontal">

            <!-- Left Column (Customer Info) -->
            <div class="responsive-block span6">
                <div class="control-group">
                    <div style="margin-left:20px;"><h5><strong>Customer details:</strong></h5></div>
                </div>

                <div class="control-group">
                    <label class="control-label">First Name:</label>
                    <div class="controls">
                        <div class="control-label">{{ entityAccounts.firstName|escape|default('N/A') }}</div>
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label">Last Name:</label>
                    <div class="controls">
                        <div class="control-label">{{ entityAccounts.lastName|escape|default('N/A') }}</div>
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label">Original Email (key):</label>
                    <div class="controls">
                        <div class="control-label">{{ entityAccounts.originalEmail|escape|default('N/A') }}</div>
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label">Email:</label>
                    <div class="controls">
                        <div class="control-label">{{ entityAccounts.email|escape|default('N/A') }}</div>
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label">Website ID:</label>
                    <div class="controls">
                        <div class="control-label">{{ entityAccounts.websiteId|escape|default('N/A') }}</div>
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label">Created At:</label>
                    <div class="controls">
                        <div class="control-label">
                            {{ entityAccounts.createdAt ? entityAccounts.createdAt|oro_format_datetime : 'N/A'|trans }}
                        </div>
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label">Updated At:</label>
                    <div class="controls">
                        <div class="control-label">
                            {{ entityAccounts.updatedAt ? entityAccounts.updatedAt|oro_format_datetime : 'N/A'|trans }}
                        </div>
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label">Imported At:</label>
                    <div class="controls">
                        <div class="control-label">
                            {{ entityAccounts.created ? entityAccounts.created|oro_format_datetime : 'N/A'|trans }}
                        </div>
                    </div>
                </div>

            </div>


            <!-- Right Column (Order Info) -->
            <div class="responsive-block span6">
                <div class="control-group">
                    <div style="margin-left:20px;"><h5><strong>Order information:</strong></h5></div>
                </div>

                <div class="control-group">
                    <label class="control-label">Order ID:</label>
                    <div class="controls">
                        <div class="control-label">{{ originalOrderId|escape }}</div>
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label">Total Paid:</label>
                    <div class="controls">
                        <div class="control-label">{{ entity.totalPaid|oro_format_currency|default('N/A') }}</div>
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label">Created At:</label>
                    <div class="controls">
                        <div class="control-label">
                            {{ entity.createdAt ? entity.createdAt|oro_format_datetime : 'N/A'|trans }}
                        </div>
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label">Updated At:</label>
                    <div class="controls">
                        <div class="control-label">
                            {{ entity.updatedAt ? entity.updatedAt|oro_format_datetime : 'N/A'|trans }}
                        </div>
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label">Imported At:</label>
                    <div class="controls">
                        <div class="control-label">
                            {{ entity.created ? entity.created|oro_format_datetime : 'N/A'|trans }}
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>
    <br />
</div>

<div class="responsive-section responsive-big responsive-section-no-blocks" style="margin-left: 15px;">
    <h4 class="scrollspy-title">Web Store Order: <strong>{{ originalOrderId|escape|default('N/A')|upper }}</strong></h4>
    <div id="physical-store-orders" class="scrollspy-nav-target"></div>
    <div class="row-fluid">
        <div class="form-horizontal">
            <div class="responsive-cell responsive-cell-no-blocks">
                {% set gridName = 'erp-order-items-grid' %}
                {% set gridFilters = { 'order_id': originalOrderId } %}
                {{ dataGrid.renderGrid(gridName, gridFilters) }}
            </div>
        </div>
    </div>
</div>
{% endblock content_data %}